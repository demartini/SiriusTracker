{
  "private": true,
  "name": "siriustracker",
  "productName": "SiriusTracker",
  "version": "0.0.1-beta.1",
  "description": "SiriusTracker is a app for track Sirius market information.",
  "main": "./src/app.js",
  "license": "MIT",
  "copyright": "Iolar Demartini Junior",
  "author": {
    "name": "Iolar Demartini Junior",
    "email": "iolardemartini@gmail.com",
    "url": "https://demartini.dev"
  },
  "homepage": "https://github.com/demartini/SiriusTracker",
  "repository": {
    "type": "git",
    "url": "https://github.com/demartini/SiriusTracker.git"
  },
  "bugs": {
    "url": "https://github.com/demartini/SiriusTracker/issues"
  },
  "keywords": [
    "app",
    "desktop",
    "electron",
    "sirius",
    "tracker",
    "ticker",
    "price",
    "cryptocurrency",
    "crypto",
    "finance"
  ],
  "postinstall": "electron-builder install-app-deps",
  "scripts": {
    "build": "electron-builder -p never -c.mac.identity=null",
    "lint-css": "stylelint --fix './src/**/*.css'",
    "lint-html": "prettier --write './src/**/*.html'",
    "lint-js": "prettier --write './src/**/*.js'",
    "release-changelog": "standard-version",
    "release": "electron-builder -c.mac.identity=null",
    "start": "electron .",
    "test": "yarn lint-html && yarn lint-css && yarn lint-js"
  },
  "build": {
    "generateUpdatesFilesForAllChannels": true,
    "appId": "com.demartini.siriustracker",
    "artifactName": "${productName}-${os}-${arch}-${version}.${ext}",
    "directories": {
      "output": "dist/"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "publish": [
        "github"
      ]
    },
    "dmg": {
      "title": "${productName}-${version}",
      "background": "build/bg.tiff",
      "icon": "build/install.icns",
      "window": {
        "width": 540,
        "height": 324
      },
      "contents": [
        {
          "x": 400,
          "y": 148,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 131,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "publisherName": "Iolar Demartini Junior",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    },
    "linux": {
      "category": "GNOME;GTK;Network;News",
      "icon": "build/icons",
      "executableName": "siriustracker",
      "synopsis": "SiriusTracker",
      "target": [
        "AppImage",
        "snap"
      ],
      "publish": [
        "github"
      ]
    },
    "snap": {
      "publish": [
        {
          "provider": "snapStore",
          "channels": "beta"
        }
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "cz-conventional-changelog": "3.0.2",
    "electron": "7.1.2",
    "electron-builder": "22.1.0",
    "electron-debug": "3.0.1",
    "eslint": "6.7.1",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.1.0",
    "lint-staged": "9.4.3",
    "prettier": "1.19.1",
    "standard-version": "7.0.1",
    "stylelint": "11.1.1",
    "stylelint-config-prettier": "6.0.0",
    "stylelint-order": "3.1.1",
    "stylelint-prettier": "1.1.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.11.2",
    "auto-launch": "5.0.5",
    "bootstrap": "4.3.1",
    "electron-is-dev": "1.1.0",
    "electron-log": "3.0.9",
    "electron-store": "5.1.0",
    "electron-updater": "4.2.0",
    "jquery": "3.4.1",
    "menubar": "7.0.0",
    "numeral": "2.0.6",
    "popper.js": "1.16.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ],
    "*.html": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
